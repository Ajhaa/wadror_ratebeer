<h2>List of ratings</h2>
<p> <%= @ratings.count %> ratings </p>
<div class='container'>
  <div class='row'>
    <div class='col-xs'>
      <h5>Top Rated breweries</h5>
      <%= render 'list', items: @top_breweries %>
    </div>
    <div class='col-xs'>
      <h5>Top Rated beers</h5>
      <%= render 'list', items: @top_beers %>
    </div>
    <div class='col-xs'>
      <h5>Top Rated styles</h5>
      <%= render 'list', items: @top_styles%>
    </div>
  </div>
</div>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Ratings</th>
  </tr>
  </thead>

  <tbody>
  <% @top_users.each do |u| %>
      <tr>
        <td><%= link_to u.name, u %></td>
        <td><%= u.ratings.count %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>



  <div>
    <h5>Recent ratings</h5>
    <ul>
      <% @ratings.each do |rating| %>
        <li> <%= rating %> by <%= link_to rating.user.username, rating.user%> at <%= rating.created_at %></li>
      <% end %>
    </ul>
  </div>


<%= link_to('New rating', new_rating_path, class:'btn btn-primary') %>
