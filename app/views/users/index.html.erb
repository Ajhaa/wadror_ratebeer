

<h1>Users</h1>

 <table class="table table-hover">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.username, user%>
          <% if user.closed %>
            <span class="badge badge-info">account closed</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New User',new_user_path, class:'btn btn-primary') %>
